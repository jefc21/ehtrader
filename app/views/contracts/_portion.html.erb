<section class="how-it-works-sec" id="faq" style="height: 100%">
  <div class="container px-4 py-5 sobre faq" id="featured-3">
    <h2 class="pb-2 border-bottom">Contratos</h2>
    <div class="accordion" id="accordionExample">

      <% ContractHistoric.all.each do |contract| %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="heading<%= contract.id %>">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= contract.id %>" aria-expanded="true" aria-controls="collapse<%= contract.id %>">
              Contrato <%= contract.open_date %>
            </button>
          </h2>
          <div id="collapse<%= contract.id %>" class="accordion-collapse collapse show" aria-labelledby="heading<%= contract.id %>" data-bs-parent="#accordionExample">
              <div class="accordion-item" style="max-height: 300px; overflow: auto;">
                <table class="table table-dark table-striped-columns">
                  <thead>
                    <tr>
                      <!--th scope="col">#</th-->
                      <th scope="col">Parcela</th>
                      <th scope="col">Valor</th>
                      <th scope="col">Status</th>
                      <th scope="col">Comprovante</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% contract.portion.all.each do |portion| %>
                      <tr>
                        <!--th scope="row">1</th-->
                        <td><%= portion.number%>Âª</td>
                        <td>R$ <%= portion.value%></td>
                        <td><%= portion.status ? "Pago" : "-" %></td>
                        <td><button disabled type="button" class="btn btn-outline-success"><i class="bi bi-eye-fill"></i></button> | <button type="button" class="btn btn-outline-success"><i class="bi bi-download"></i></button> </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <!--% end %-->
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>